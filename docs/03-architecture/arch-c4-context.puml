@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title SnapMatch - Context Diagram

Person(candidate, "Соискатель", "Загружает резюме и получает результат проверки")
Person(hr, "HR-специалист", "Анализирует кандидатов и управляет вакансиями")

System_Boundary(SnapMatch, "SnapMatch") {
    System(snapmatch, "Upload Service", "Принимает резюме от кандидатов и оценивает соответствие резюме вакансии")
}

candidate --> snapmatch : Загружает резюме
hr --> snapmatch : Управляет вакансиями и просматривает кандидатов
snapmatch --> hr : Выдаёт оценку и сводку по кандидату
snapmatch --> candidate : Отправляет результат кандидату

@enduml